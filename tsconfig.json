{
  "compilerOptions": {
    "types": [
      "node"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "pretty": true,
    "sourceMap": true,
    "target": "es6",
    "outDir": "./lib",
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "*",
        "system/*",
        "src/*",
        "system/helper/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "system/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
